extends layout

block content
  .contact-container
    .contact-header
      h1 Get in Touch with Us
      p We are here to answer any questions you may have. Reach out to us and we'll respond as soon as we can.
    
    .contact-form
      form(action='/submit', method='POST')
        .form-group
          label(for='name') Name
          input(type='text', id='name', name='name', placeholder='Your Name', required=true)
        
        .form-group
          label(for='email') Email
          input(type='email', id='email', name='email', placeholder='Your Email', required=true)
        
        .form-group
          label(for='subject') Subject
          input(type='text', id='subject', name='subject', placeholder='Subject', required=true)
        
        .form-group
          label(for='message') Message
          textarea(id='message', name='message', rows='6', placeholder='Your Message', required=true)
        
        .form-group
          button(type='submit') Send Message
    
    .contact-info
      h2 Contact Information
      p Phone: +123 456 7890 000
      p Email: contact@healthsphere.ai
      p Address: 123 AI Street, Canaan Land, Island.
